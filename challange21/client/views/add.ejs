<%- include("partials/_header") %>

<body style="font-family: 'Fresca', sans-serif;">
  <div class="container">
    <div id="form-add">
      <h1 class="text-center">BREAD<br> <small>(Browse, Read, Edit, Add, Delete)</small> </h1>
      <hr>
      <h2>Add Data</h2>
      <form id="form-add">
        <input type="hidden" id="id" value="">
        <div class="form-group row">
          <label for="inputString" class="col-sm-2 col-form-label">Nama</label>
          <div class="col-sm-10">
            <input type="text" class="form-control" id="string" name="string" placeholder="Nama">
          </div>
        </div>
        <div class="form-group row">
          <label for="inputInteger" class="col-sm-2 col-form-label">Umur</label>
          <div class="col-sm-10">
            <input type="text" class="form-control" id="integer" name='integer' placeholder="Umur">
          </div>
        </div>
        <div class="form-group row">
          <label for="inputFloat" class="col-sm-2 col-form-label">Tinggi Badan</label>
          <div class="col-sm-10">
            <input type="text" class="form-control" id="float" name='float' placeholder="Tinggi Badan">
          </div>
        </div>
        <div class="form-group row">
          <label for="inputDate" class="col-sm-2 col-form-label">Tanggal Bergabung</label>
          <div class="col-sm-10">
            <input type="date" class="form-control" id="date" name="date">
          </div>
        </div>
        <div class="form-group row">
          <label for="inputBoolean" class="col-sm-2 col-form-label">Sudah Menikah</label>
          <div class="col-sm-10">
            <select class="custom-select" id="boolean" name="boolean">
              <option disabled selected>Pilih Salah Satu</option>
              <option value="false">Belum</option>
              <option value="true">Sudah</option>
            </select>
          </div>
        </div>
        <button type="submit" class="btn btn-success button-add">Save</button>
        <a class="btn btn-warning" href="/">Cancel</a>
      </form>
      <br>
    </div>
  </div>

  <script src="https://code.jquery.com/jquery-3.4.1.slim.min.js"
    integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n" crossorigin="anonymous">
  </script>
  <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js"
    integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous">
  </script>
  <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js"
    integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6" crossorigin="anonymous">
  </script>
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
  <script type="text/javascript">
    const apiUrl = "http://localhost:3000/api/v2/record/add";
    $(document).ready(() => {
      $('#form-add').submit((e) => {
        e.preventDefault();
        addData();
      });

      const addData = () => {
        $.ajax({
            method: "POST",
            url: `${apiUrl}`,
            data: {
              nama: $('#string').val(),
              umur: $('#integer').val(),
              tinggi: $('#float').val(),
              tanggallahir: $('#date').val(),
              menikah: $('#boolean').val(),
            },
            dataType: 'json'
          })
          .done((result) => {
            $('#id').val('');
            $('#string').val('');
            $('#integer').val('');
            $('#float').val('');
            $('#date').val('');
            $('#boolean').val('');
            location.replace('/')
          })
      }
    })
  </script>
</body>

</html>